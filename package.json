{
  "name": "static-site-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for static websites using: Webpack, Sass, Bootstrap, Eslint (Airbnb's eslintrc), Babel, FontAwesome",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --mode production",
    "dev": "webpack --mode development",
    "watch": "vagrant up && webpack --watch --mode development",
    "start": "webpack-dev-server --open --mode development",
    "stop": "vagrant halt -f",
    "stats": "webpack-bundle-analyzer bundle-stats.json"
  },
  "keywords": [
    "Static",
    "Website",
    "Boilerplate",
    "Webpack",
    "Sass",
    "Bootstrap",
    "Eslint",
    "Airbnb",
    "Babel",
    "FontAwesome"
  ],
  "author": "Zachary Holman",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-brands-svg-icons": "^5.15.1",
    "@fortawesome/free-regular-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "bootstrap": "^4.5.3",
    "jquery": "^3.5.1",
    "lazysizes": "^5.2.2",
    "normalize.css": "^8.0.1",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.13",
    "browser-sync-webpack-plugin": "^2.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.0",
    "cssnano": "^4.1.10",
    "dotenv-webpack": "^5.0.1",
    "eslint": "^7.12.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "file-loader": "^6.2.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.0",
    "img-loader": "^3.0.2",
    "mini-css-extract-plugin": "^1.2.1",
    "postcss-loader": "^4.0.4",
    "preload-webpack-plugin": "^2.3.0",
    "sass": "^1.28.0",
    "sass-loader": "^10.0.5",
    "url-loader": "^4.1.1",
    "webpack": "^5.4.0",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "browser": true
    },
    "rules": {
      "func-names": [
        "error",
        "never"
      ]
    }
  }
}
